<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hp2"
    tools:context=".Hermione">

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Hermione Granger's Patronus?"
        android:textColor="#ED4B18"
        android:textAlignment="center"
        android:textSize="90px"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400px"/>

    <Button
        android:id="@+id/wronghermione1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Hare"
        android:textAllCaps="false"
        android:layout_marginTop="380px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/question2"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wronghermione2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Horse"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghermione1"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/righthermione1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Otter"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghermione2"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wronghermione3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Doe"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/righthermione1"
        tools:layout_editor_absoluteX="-5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>