<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hghard"
    tools:context=".Hermione3">
    <TextView
        android:id="@+id/hardquestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Hermione Granger's least favorite subject'?"
        android:textColor="#B0B8BF"
        android:textSize="90px"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400px"/>

    <Button
        android:id="@+id/wronghardhermione1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Arithmancy"
        android:textAllCaps="false"
        android:layout_marginTop="320px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/hardquestion2"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/righthardhermione1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Divination"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghardhermione1"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/wronghardhermione2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Herbology"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/righthardhermione1"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wronghardhermione3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Potions"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghardhermione2"
        tools:layout_editor_absoluteX="-5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>