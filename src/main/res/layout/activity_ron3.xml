<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rwhard"
    tools:context=".Ron3">

    <TextView
        android:id="@+id/hardquestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Which Horcrux did Ron Weasley destroy?"
        android:textColor="#ED4B18"
        android:textSize="90px"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="490px"/>

    <Button
        android:id="@+id/righthardron1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Slytherin's locket"
        android:textAllCaps="false"
        android:layout_marginTop="340px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/hardquestion3"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/wronghardron1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Hufflepuff's cup"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/righthardron1"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wronghardron2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Tom Riddle's diary"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghardron1"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wronghardron3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Gaunt's ring"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wronghardron2"
        tools:layout_editor_absoluteX="-8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>