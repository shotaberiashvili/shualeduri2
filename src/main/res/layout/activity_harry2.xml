<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hpmedium"
    tools:context=".Harry2">
    <TextView
        android:id="@+id/mediumquestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where was Harry Potter born?"
        android:textColor="#FDFCFC"
        android:textAlignment="center"
        android:textSize="100px"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340px"/>

    <Button
        android:id="@+id/wrongmediumharry1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Mould-on-the-Wold"
        android:textAllCaps="false"
        android:layout_marginTop="380px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/mediumquestion1"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/rightmediumharry1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Godric's Hollow"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wrongmediumharry1"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/wrongmediumharry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Cokeworth"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/rightmediumharry1"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/wrongmediumharry3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Hogsmeade"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="60px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wrongmediumharry2"
        tools:layout_editor_absoluteX="-5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>