<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rwmedium"
    tools:context=".Ron2">
    <TextView
        android:id="@+id/mediumquestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Who was disguised as Scabbers(Ron's pet)?"
        android:textColor="#7F8164"
        android:textAlignment="center"
        android:textSize="100px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="380px"/>

    <Button
        android:id="@+id/wrongmediumron1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Sirius Black"
        android:textAllCaps="false"
        android:layout_marginTop="360px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/mediumquestion3"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/wrongmediumron2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Remus Lupin"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wrongmediumron1"
        tools:layout_editor_absoluteX="-5dp" />

    <Button
        android:id="@+id/rightmediumron1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Peter Pettigrew"
        android:textAllCaps="false"
        android:layout_marginTop="20px"
        android:textSize="70px"
        android:textColor="#FBE731"
        app:layout_constraintTop_toBottomOf="@+id/wrongmediumron2"
        tools:layout_editor_absoluteX="-5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>